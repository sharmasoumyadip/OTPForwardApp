<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semi_bold_italic"
        android:text="OTP Forward Service is Running"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/notificaton_service_running_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:alpha="0.8"
        android:text="Running Since Place holder"
        android:textStyle="normal" />

    <Button
        android:id="@+id/notification_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Stop Service" />

</LinearLayout>